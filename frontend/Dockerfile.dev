FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy DEVELOPMENT nginx configuration
COPY nginx.dev.conf /etc/nginx/conf.d/default.conf

# Copy source code
COPY . .

# Expose dev server port
EXPOSE 80

# Prevent auto-opening browser and restart on failures
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "80", "--no-open"]
